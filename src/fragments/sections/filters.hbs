<section class="section-filters" data-fragment="section-filters">
  {{#> common/container}}
    <ul class="section-filters__filters-list">
      <!-- First selector -->
      <li class="section-filters__filter">
        <div class="section-filters__filter-info">
          <img
            class="section-filters__mascot"
            src="/static/images/mascots/sun.png"
          />
          <p class="section-filters__filter-desc"><strong>1.</strong> Set the amount of <strong>sunlight</strong> your plant will get.</p>
        </div>
        {{#> common/select name="sunlight-select" fieldSlug="sunlight-select"}}
          <option value="no">No sunlight</option>
          <option value="low">Low sunlight</option>
          <option value="high">High sunlight</option>
        {{/common/select }}
      </li>

      <!-- Second selector -->
      <li class="section-filters__filter">
        <div class="section-filters__filter-info">
          <img
            class="section-filters__mascot"
            src="/static/images/mascots/wateringcan.png"
          />
          <p class="section-filters__filter-desc"><strong>2.</strong> How often do you want to <strong>water</strong> your plant?</p>
        </div>
        {{#> common/select name="water-select" fieldSlug="water-select"}}
          <option value="rarely">Rarely</option>
          <option value="regularly">Regularly</option>
          <option value="daily">Daily</option>
        {{/common/select }}
      </li>

      <!-- Third selector -->
      <li class="section-filters__filter">
        <div class="section-filters__filter-info">
          <img
            class="section-filters__mascot"
            src="/static/images/mascots/dog.png"
          />
          <p class="section-filters__filter-desc"><strong>3.</strong> Do you have pets? Do they <strong>chew</strong> plants?</p>
        </div>
        {{#> common/select name="chew-select" fieldSlug="chew-select"}}
          <option value="false">No/They donâ€™t care</option>
          <option value="true">Yes</option>
        {{/common/select }}
      </li>
    </ul>
  {{/common/container }}
</section>